<%= form_with url: "/artists/#{@artist.id}/songs", method: :post, local: true do |form| %>
  <%= form.label "Name:" %>
  <%= form.text_field :name %>

  <%= form.label "Top 100:" %>
  <%= form.select :top_100, ['Yes', 'No'] %>

  <%= form.label "Length In Seconds:" %>
  <%= form.text_field :length_s %>

  <%= form.hidden_field :artist_id %>
  <%= hidden_field_tag :artist_id, "#{@artist.id}"  %>

  <%= form.submit 'Add Song' %>
<% end %>
