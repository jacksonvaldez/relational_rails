<h2>Edit Song</h2>

<%= form_with url: "/songs/#{@song.id}", method: :patch, local: true do |form| %>
  <%= form.label "Name:" %>
  <%= form.text_field :name, value: @song.name %>

  <%= form.label "Top 100:" %>
  <%= form.select :top_100, ['Yes', 'No'] %>

  <%= form.label "Length In Seconds:" %>
  <%= form.text_field :length_s, value: @song.length_s %>

  <%= form.hidden_field :artist_id %>
  <%= hidden_field_tag :artist_id, "#{@song.artist.id}"  %>

  <%= form.submit 'Save Changes' %>
<% end %>
