<%= form_with url: "/bakeries/#{@bakery.id}/bakers", method: :post, local: true do |form| %>
  <%= form.label "Name:" %>
  <%= form.text_field :name %>

  <%= form.label "Working Currently:" %>
  <%= form.select :is_working, ['Yes', 'No'] %>

  <%= form.label "Salary:" %>
  <%= form.text_field :salary %>

  <%= form.hidden_field :bakery_id %>
  <%= hidden_field_tag :bakery_id, "#{@bakery.id}"  %>

  <%= form.submit 'Hire Baker' %>
<% end %>
